
@model IEnumerable<Online_Shoping.Models.Order_Details_View>
@{
    ViewBag.Title = "Delivery";
}

<html>
<head>
    <style>
        .ord-row {
            display: flex;
            gap:5%;
        }

            .ord-row img {
                width: 100px;
                height: 100px;
            }

        .heading {
            border-bottom: 1px solid #9e9e9e;
        }

        /*.quantity, .country {
            width: 1rem;
        }*/

        .accept, .reject {
            height: 2rem;
            color: white;
            padding: 0.2rem;
            border-radius: 5px;
            cursor: pointer;
        }

            .accept:hover, .reject:hover {
                color: white;
            }

        .accept {
            background-color: green;
        }

        .reject {
            background-color: red;
        }
        .name{
            width:12rem;
        }
        .quantity{
            width:10rem;
        }
        .address{
            width:20rem;
        }
        .price{
            width:5rem;
        }
    </style>
</head>
<body>
    <div class="order-req-container">
        <div class="ord-row">
            <h4 class="p-1 heading image">Image</h4>
            <h4 class="name p-1"><label class="heading">Name</label></h4>
            <div class="p-1 quantity"><h4 class="heading">Quantity</h4></div>
            <h4 class="p-1 heading address">Address</h4>
            <h4 class="p-1 heading price">Price</h4>
            <h4 class="p-1 heading">Action</h4>

        </div>
        @foreach (var ordr in Model)
        {
            <div class="ord-row">
                <img src="@Url.Content(ordr.image)" alt="@ordr.p_name" />
                <div class="text-start name d-flex align-items-center">
                    @ordr.p_name
                </div>
                <div class="quantity d-flex align-items-center">
                    @ordr.quantity
                </div>
                <div class="address d-flex  flex-column text-start">
                    <h6 class="m-0">@ordr.Name</h6>
                    
                    <div>@ordr.Address_line1 @ordr.City, @ordr.Dist, @ordr.Country,PIN-@ordr.PIN </div>
                    <div>@ordr.Mobile</div>
                    <div>@ordr.Alt_Mobile</div>
                </div>
                <div class="d-flex align-items-center price">
                    @ordr.price
                </div>
                <div class="actions d-flex align-items-center gap-3">
                    <a class="accept" href="@Url.Action("Delivered","Admin",new {od_id=ordr.od_id})">Accept</a>
                    <a class="reject" href="@Url.Action("CancelOrder","Admin",new {od_id=ordr.od_id})">Reject</a>
                </div>
            </div>
        }
    </div>
</body>
</html>